<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_cardview"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    card_view:contentPadding="7dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="15dp"
    card_view:cardBackgroundColor="?attr/colorPrimary"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/forecast_weather_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/ic_sun" />

        <TextView
            android:id="@+id/forecast_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/forecast_weather_icon"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forecast_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/forecast_temp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/forecast_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/forecast_date"
            android:textSize="18sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
